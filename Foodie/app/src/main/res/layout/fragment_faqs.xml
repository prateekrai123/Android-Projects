<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Faqs"
    android:background="#B5FFAAB4">

    <TextView
        android:id="@+id/que1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. In what time will the food be delievered?"
        android:textColor="#000000"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/ans1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/que1"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="Ans. The delievery will be done within 30 minutes of placing the order."/>
    <TextView
        android:id="@+id/que2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Re the restaurants of good quality?"
        android:textColor="#000000"
        android:layout_below="@id/ans1"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/que2"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="Ans. The restaurants are authentic and the food delivered will be of high quality and fresh."/>


</RelativeLayout>